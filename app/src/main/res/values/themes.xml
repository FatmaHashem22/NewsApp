<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NewsApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:statusBarColor" tools:targetApi="1">@color/green</item>
    </style>

    <style name="noActionBar" parent="Theme.NewsApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SystemBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SystemBar_PopupOvelay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LeftCardViewBg" parent="@style/Widget.MaterialComponents.CardView">
        
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayForLeftCardView</item>
        
    </style>
    
    <style name="ShapeAppearanceOverlayForLeftCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>

    </style>


    <style name="RightCardViewBg" parent="@style/Widget.MaterialComponents.CardView">

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayForRightCardView</item>

    </style>

    <style name="ShapeAppearanceOverlayForRightCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>
</resources>